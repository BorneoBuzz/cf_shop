<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-4"><%= image_tag(@product.image_url, width: "350") %></div>

	<div class="col-md-4">
		<p>
		  <h2><%= @product.name %></h2>
		</p>

		<p>
		  <%= @product.description %>
		</p>

		<p>
		  <strong>Color:</strong> <%= @product.color %>
		</p>
		<p><%= rating_for @product, "overall" %></p>
	</div>

</div>

<%= render 'new_comment' %>

<%= render 'comments' %>